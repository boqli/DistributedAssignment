@model Common.Fund
@inject Presentation.Interfaces.IAPIDataAccess symbols
@{
    ViewData["Title"] = "createFund";
}

<h1>Create Fund</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="createFund">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IBAN" class="control-label"></label>
                <input asp-for="IBAN" class="form-control" name="IBAN" />
                <span asp-validation-for="IBAN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankCode" class="control-label"></label>
                <input asp-for="BankCode" class="form-control" name="BankCode" />
                <span asp-validation-for="BankCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankName" class="control-label"></label>
                <input asp-for="BankName" class="form-control" name="BankName" />
                <span asp-validation-for="BankName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" class="form-control" name="Country" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountryCode" class="control-label"></label>
                <input asp-for="CountryCode" class="form-control" name="CountryCode" />
                <span asp-validation-for="CountryCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="currencyCode" class="control-label"></label>
                <div>
                    @{ var symbilz = symbols.getSymbols().Result; }
                    <select asp-for="currencyCode" name="currencyCode">
                        @for (int i = 0; i < symbilz.Count; i++)
                        {
            <option value="@symbilz[i].symbol">@symbilz[i].symbol</option>}
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="OpeningBalance" class="control-label"></label>
                <input asp-for="OpeningBalance" class="form-control" name="OpeningBalance" />
                <span asp-validation-for="OpeningBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>