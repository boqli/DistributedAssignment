@model Common.Fund

@{
    ViewData["Title"] = "deposit";
}

<h1>deposit</h1>

<h4>Fund</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="deposit">
            <div class="form-group">
                <label class="control-label">Fund Account Number</label>
                <input type="number" name="fundAcc" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Amount to deposit</label>
                <input type="number" name="amount" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Deposit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Index</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
