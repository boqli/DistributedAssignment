@model Common.Fund

@{
    ViewData["Title"] = "transferToOtherAccount";
}

<h1>Transfer To Other Account</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="transferToOtherAccount">
            <div class="form-group">
                <label class="control-label">Fund Account Number</label>
                <input type="number" name="fundAcc" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Amount to deposit</label>
                <input type="number" name="amount" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Fund Account Reciever</label>
                <input type="number" name="reciever" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Transfer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
