@model IEnumerable<Common.File>

@{
    ViewData["Title"] = "ListFiles";
}

<h1>ListFiles</h1>

<p>
    <a asp-action="Send">Add File</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (string.IsNullOrEmpty(item.Attachment) == false)
                {<a href="@item.Attachment">Download</a>}
                |
                @if (string.IsNullOrEmpty(item.newLink) == false)
                {
                    <a href="@item.newLink">Download PDF</a>
                }

            </td>
        </tr>
}
    </tbody>
</table>
